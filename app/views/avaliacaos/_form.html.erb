
<%= simple_form_for(@avaliacao) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :descricao %>
    <%= f.input :nota %>
    <%= f.input :peso %>
    <%= f.input :data %>

    <div class="field">
      <%= f.label :disciplina_id %>
      <%= f.collection_select :disciplina_id, Disciplina.all, :id, :nome, prompt: true %>
    </div> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
