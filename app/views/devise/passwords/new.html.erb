<%= stylesheet_link_tag 'page/form.css' %>

<div class="center-form-container">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "main-form-container" }) do |f| %>
    <h1>Período Fácil</h1>
    
    <div class="container-form-fields">
      <div class="field-with-icon">
        <%= inline_svg 'Email.svg', alt: "E-mail Icon", class: "custom-input-icon" %>
        <%= text_field_tag "#{resource_name}[email]", nil, 
          required: true, autofocus: true, autocomplete: "email", 
          placeholder: "E-mail", class: "custom-input" %>
      </div>
      <%= f.button :submit, t(".send_me_reset_password_instructions"), class: "submit" %>
    </div>

    <div class="container-form-footer">
      <div class="divider">
        <hr>
        <span>OR</span>
        <hr>
      </div>
  
      <p class="sign-up">Não possui uma conta? <%= link_to "Cadastra-se", new_registration_path(resource_name) %></p>
      <p class="sign-up">Já possui uma conta? <%= link_to "Log in", new_session_path(resource_name) %></p>
    </div>
  <% end %>
</div>



