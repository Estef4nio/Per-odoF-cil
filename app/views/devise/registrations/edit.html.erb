<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4"><%= t(".title", resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: "registrations.edit.title")) %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :username %>
          <%= f.input_field :username, class: 'form-control', required: true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.input_field :email, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :curso %>
          <%= f.input_field :curso, class: 'form-control', required: true, autofocus: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info">
            <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.input_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "Deixe em branco se nÃ£o quiser alterar", required: false %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.input_field :password_confirmation, class: 'form-control', autocomplete: "new-password", required: false %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %>
          <%= f.input_field :current_password, class: 'form-control', autocomplete: "current-password", placeholder: "Digite sua senha atual", required: true %>
        </div>

        <div class="form-group">
          <%= f.button :submit, t(".update"), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <h3 class="mt-4"><%= t(".cancel_my_account") %></h3>

      <div>
        <%= t(".unhappy") %>
        <%= button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class: 'btn btn-danger mt-2' %>
      </div>

      <%= link_to t("devise.shared.links.back"), :back, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
